{
  "routes": [
    {
      "route": "/index.html",
      "rewrite": "/api/root"
    },
    {
      "route": "/learning-areas/*",
      "rewrite": "/api/engage"
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/aad"
    }
  ],
  "platform": {
    "apiRuntime": "node:16"
  },
  "responseOverrides": {
    "404": {
      "redirect": "/index.html"
    },
    "401": {
      "redirect": "/.auth/login/aad?post_login_redirect_uri=.referrer",
      "statusCode": 302
    }
  }
}