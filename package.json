{
  "name": "learn-do-share",
  "version": "1.0.0",
  "description": "Track what you're learning, doing, and sharing",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "validate:display": "tsc --noEmit -p ./display",
    "build:display": "npm run validate:display && vite build",
    "start:server": "node --loader esbuild-node-loader --no-warnings ./server/index.ts",
    "start:display": "vite",
    "waitFor:server": "wait-on tcp:7664",
    "start": "nf start -p 7664",
    "test": "node --enable-source-maps --loader esbuild-node-loader --no-warnings ./behaviors/runner.ts"
  },
  "author": "Brian Watkins",
  "license": "MIT",
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "esbehavior": "^1.2.3",
    "esbuild-node-loader": "^0.8.0",
    "express": "^4.17.3",
    "foreman": "^3.0.1",
    "playwright": "^1.19.2",
    "redux": "^4.1.2",
    "snabbdom": "^3.3.1",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": "^16.0.0"
  }
}
