{
  "name": "learn-do-share",
  "version": "1.0.0",
  "description": "Track what you're learning, doing, and sharing",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "validate:display": "tsc --noEmit -p .",
    "validate:backstage": "tsc --noEmit -p ./azure/api",
    "validate": "npm run validate:display && npm run validate:backstage",
    "build:display": "npm run validate:display && vite build",
    "start:server": "node --loader @esbuild-kit/esm-loader --no-warnings ./local/backstage/index.ts",
    "start": "nf start",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "./azure/test/start.sh",
    "test:integration:debug": "DEBUG=true npm run test:integration",
    "test:unit": "node --loader @esbuild-kit/esm-loader --no-warnings ./behaviors/unit/display/runner.ts",
    "test:unit:tl": "node --loader @esbuild-kit/esm-loader --no-warnings ./behaviors/unit/display-tl/runner.ts",
    "test:unit:adapters": "node --require dotenv/config --loader @esbuild-kit/esm-loader --no-warnings ./behaviors/unit/adapters/runner.ts",
    "test:unit:debug": "DEBUG=true npm run test:unit",
    "test:unit:tl:debug": "DEBUG=true npm run test:unit:tl",
    "prepare": "husky install"
  },
  "author": "Brian Watkins",
  "license": "MIT",
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@azure/static-web-apps-cli": "^1.0.1",
    "@esbuild-kit/esm-loader": "^2.4.2",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.21",
    "@types/wait-on": "^5.3.1",
    "autoprefixer": "^10.4.4",
    "chai": "^4.3.6",
    "esbehavior": "^4.0.1",
    "express": "^4.17.3",
    "foreman": "^3.0.1",
    "husky": "^7.0.0",
    "msw": "^1.2.1",
    "node-fetch": "^3.2.4",
    "playwright": "^1.31.2",
    "postcss": "^8.4.12",
    "sinon": "^14.0.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^5.0.2",
    "vite": "^2.8.6",
    "vite-tsconfig-paths": "^4.0.7",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "dependencies": {
    "@azure/cosmos": "^3.15.1",
    "@microsoft/applicationinsights-web": "^2.7.4",
    "date-fns": "^2.28.0",
    "hast-util-select": "^5.0.1",
    "loop": "file:../esdisplay",
    "rehype-stringify": "^9.0.3",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2"
  },
  "msw": {
    "workerDirectory": "behaviors/unit/display"
  }
}
