{
  "name": "learn-do-share",
  "version": "1.0.0",
  "description": "Track what you're learning, doing, and sharing",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "validate:server": "tsc --noEmit -p ./server",
    "validate:display": "tsc --noEmit -p ./display",
    "validate": "npm run validate:server && npm run validate:display",
    "build:server": "node ./scripts/buildServer.js",
    "build:client": "vite build",
    "build": "npm run validate && npm run build:server && npm run build:client",
    "start:server": "node ./build/server/index.js",
    "start:client": "vite",
    "waitFor:server": "wait-on tcp:7664",
    "start": "nf start -p 7664",
    "test": "node --enable-source-maps --loader esbuild-node-loader --no-warnings ./behaviors/runner.ts"
  },
  "author": "Brian Watkins",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "esbehavior": "^1.2.3",
    "esbuild": "^0.14.27",
    "esbuild-node-loader": "^0.8.0",
    "foreman": "^3.0.1",
    "playwright": "^1.19.2",
    "redux": "^4.1.2",
    "snabbdom": "^3.3.1",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "wait-on": "^6.0.1"
  }
}
